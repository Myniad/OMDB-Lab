@{
}

<form asp-method="post" asp-action="MovieSearch">
    <!-- post request is why we use "post" -->

    <p>Please enter a movie title</p>
    <input type="text" name="title" />



    <input type="submit" />  <!-- When submitted, it will post and go to home controller-->
</form>

@{
    if (Model != null)
    {
        <h1>@Model.Title</h1>
        <p>@Model.Year</p>
        <p>@Model.Genre</p>
        <p>@Model.Runtime</p>
    }
}